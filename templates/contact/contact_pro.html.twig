{% extends 'base.html.twig' %}
{% block title %}
	Contact pro
{% endblock %}
{% block body %}
	<div class="container-fluid" id="contact">
		<div class="row" id="contactrow">
			<div data-aos="flip-left" data-aos-easing="ease-out-cubic" data-aos-duration="2000" class="aos">
				<div class="col-lg-12 mx-auto">
					<div class="text-center">
						<h1>Contact-nous</h1>
						<div class="lead">Nous r√©pondons sous 48h</div>
					</div>
					<div class="col" id="contactcol">
						{{ form_start(form) }}
						<div class="mt-3">
							{{ form_row(form.pseudo) }}
						</div>
						{{ form_row(form.email) }}
						<div class="mt-3">
							{{ form_row(form.subject) }}
						</div>
						<div class="mt-3">
							{{ form_row(form.message) }}
						</div>
						<div class="mt-3">
							{{ form_row(form.submit) }}
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
