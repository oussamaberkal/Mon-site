{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="col-md-12 mx-auto">
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		</div>
	{% endfor %}
	<div class="container-fluid" id="contact">
		<div class="row" id="contactrow">
			<div data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1500" style="margin:0 auto;">
				<div class="col-lg-12 mx-auto" id="registercol">
					<div class="col-md-12 mx-auto" style="width:140px;"><img src=" {{asset('img/sign.png')}} " alt="" class="login-logo"></div>
					{{ form_start(registrationForm) }}
					{{ form_row(registrationForm.pseudo) }}
					{{ form_row(registrationForm.email) }}
					{{ form_row(registrationForm.plainPassword) }}
					{{ form_row(registrationForm.agreeTerms) }}
					{{ form_row(registrationForm.submit) }}
					{{ form_end(registrationForm) }}
				</div>
				<div class="text-center mt-1">
					Deja un compte ?
					<a href=" {{path('app_login')}} ">
						Connexion
					</a>
				</div>
			</div>
			<div class="modal fade" id="termsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">Conditions Utilisateur</h5>
							<button type="button" class="btn close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							Lorem ipsum dolor sit amet consectetur adipisicing elit. Soluta natus, dolorem, cumque debitis fugiat rem officia dicta corrupti officiis quasi consequatur odit corporis ut aliquam recusandae. Doloribus placeat quasi veniam atque cupiditate autem ipsum repudiandae illum dolores porro eveniet vero, nam totam, ut pariatur obcaecati earum omnis saepe at maxime sequi. Praesentium fugit iure nemo dicta maiores exercitationem ullam quis iste, cupiditate accusamus ex laboriosam? Veniam voluptates deleniti iste qui laudantium tempora perferendis perspiciatis, atque praesentium. Eveniet maxime ab officia dignissimos illum laboriosam delectus assumenda iusto facere corporis, doloremque ex ut repellendus? Vero alias corporis facere incidunt porro! Ex, perferendis?
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
