{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
	<div class="container-fluid" id="login">
		<div class="row" id="contactrow">
			<div data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1500" style="margin:0 auto;">
				<div class="col-lg-12 mx-auto" id="contactcol">
				<div class="col-md-12 mx-auto" style="width:220px;"><img src=" {{asset('img/avatar.png')}} " alt="" class="login-logo">
				</div>
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
						<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus style="margin-bottom:10px;">
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" required>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="checkbox mb-3">
							<label>
								<input type="checkbox" name="_remember_me">
								Se souvenir de moi
							</label>
						</div>
						<button class="btn btn-lg btn-primary" id="contact_pro_submit" type="submit" style="margin-top:10px;">
							Sign in
						</button>
						<div>
							Pas encore un compte ?<a href=" {{path('app_register')}} ">Inscription</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
